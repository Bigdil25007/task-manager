<!-- Liste des sous-tâches -->
<% if (task.sousTaches && task.sousTaches.length > 0) { %>
    <div class="mt-4">
        <h5 class="title is-5">Sous-tâches</h5>
        <% task.sousTaches.forEach(sousTache => { %>
            <div class="box">
                <div class="level">
                    <div class="level-left">
                        <p><%= sousTache.titre %></p>
                    </div>
                    <div class="level-right">
                        <span class="tag is-<%= getStatusColor(sousTache.statut) %>">
                            <%= sousTache.statut %>
                        </span>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
<% } %> 